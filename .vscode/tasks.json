{
  "version": "2.0.0",
  "type": "shell",
  "group": "build",
  "problemMatcher": "$tsc",
  "presentation": {
    "echo": true,
    "reveal": "silent",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "tasks": [
    {
      "label": "Build Doro-Basic",
      "command": ["cd 0-basic && yarn build"]
    },
    {
      "label": "Build Doro-Transpiler",
      "command": ["cd 1-transpiler && yarn build"]
    },
    {
      "label": "Build Doro-Bundler",
      "command": ["cd 2-bundler && yarn build"]
    },
    {
      "label": "Build Doro-Typescript",
      "command": [
        "cd 3-typescript && yarn run lint && yarn format && yarn build"
      ]
    },
    {
      "label": "Build Doro-React",
      "command": ["cd 4-react && yarn run lint && yarn format && yarn build"]
    }
  ]
}
