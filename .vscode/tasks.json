{
  "version": "2.0.0",
  "type": "shell",
  "group": "build",
  "problemMatcher": "$tsc",
  "presentation": {
    "echo": true,
    "reveal": "silent",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "tasks": [
    {
      "label": "Build Doro-Basic",
      "command": ["cd demos-simple/0-basic && yarn build"]
    },
    {
      "label": "Build Doro-Transpiler",
      "command": ["cd demos-simple/1-transpiler && yarn build"]
    },
    {
      "label": "Build Doro-Bundler",
      "command": ["cd demos-simple/2-bundler && yarn build"]
    },
    {
      "label": "Build Doro-Typescript",
      "command": [
        "cd demos-simple/3-typescript && yarn run lint && yarn format && yarn build"
      ]
    }
  ]
}
