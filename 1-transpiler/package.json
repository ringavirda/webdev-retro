{
  "name": "doro-transpiler",
  "scripts": {
    "clean": "rimraf dist && mkdirp dist",
    "build": "yarn clean && babel src -d dist && cpx 'src/*.{html,css}' dist",
    "serve": "http-server dist -p 5000"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "cpx": "^1.5.0",
    "http-server": "^14.1.1",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1"
  }
}
